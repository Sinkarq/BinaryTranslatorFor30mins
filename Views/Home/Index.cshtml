@model BaseModel

@{
    ViewData["Title"] = "Home Page";
}

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <b><label asp-for="Data" class="center"></label></b>
        <textarea asp-for="Data" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary col-md-4 offset-md-4 mb-2 mt-2"/>
        <textarea class="form-control" rows="8">@Model.Data</textarea>
    </div>
</form>


<style>
    .center {
      display: flex;
      margin: 10px;
      justify-content: center;
    }
</style>
